@{
    ViewData["Title"] = "Home Page";
}

<div class="hero-container">
    <div class="text-center hero-content">
        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <h1 class="display-3">Welcome, @User.Claims.Where(x => x.Type == "name").FirstOrDefault().Value!</h1>
            <div class="mt-4">
                <a class="btn btn-primary btn-lg me-3" asp-controller="Home" asp-action="LandingPage">Get Started</a>
                @* <a class="btn btn-danger btn-lg" asp-controller="Account" asp-action="Logout">Logout</a> *@
            </div>
        }
        else
        {
            <h1 class="display-3">Welcome to the 360 Feedback Portal</h1>
            <p class="lead">A collaborative space to manage feedback effortlessly.</p>
            @* <a class="btn btn-success btn-lg mt-3" asp-controller="Account" asp-action="Login">Login</a> *@
        }
    </div>
</div>
