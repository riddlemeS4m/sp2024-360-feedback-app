@model IEnumerable<Capstone_360s.Models.FeedbackDb.Organization>

@{
    ViewData["Title"] = "Choose a Class";
}

<h2>Choose a Class</h2>

@if (Model.Any())
{
    <div class='col-md-8'>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr onclick="confirmSelection('@Url.Action("AssignUserToOrganizationConfirm", new { organizationId = item.Id })', '@Html.DisplayFor(modelItem => item.Name)')">
                        <td>
                            @* <a class="select-link-primary" asp-action="AssignUserToOrganizationConfirm" asp-route-organizationId="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a> *@
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div>
        <p>There are no classes to select.</p>
    </div>
}


@section Scripts {

    <script>
        function confirmSelection(url, className) {
            if (confirm(`Are you sure you want to select "${className}"?`)) {
                window.location.href = url;
            }
        }
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

